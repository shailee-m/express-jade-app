block navbar
    nav.navbar.navbar-default( role="navigation" ).navbar-fixed-top
        .navbar-header
            button.navbar-toggle.collapsed( type="button", data-toggle="collapse", data-target="#navbar-inverse", aria-expanded="false", aria-controls="navbar")
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.navbar-brand(href="/") Yello
     
        #navbar-inverse.collapse.navbar-collapse
            ul.nav.navbar-nav
                - var page = route //document.URL.split('/')[document.URL.split('/').length-1]
                li#hometab: a( href="/")(class=page==''?'active':'') Home
                li#tabletab: a( href="/table" )(class=page=='table'?'active':'') table
                li#formtab: a( href="/form")(class=page=='form'?'active':'') form

